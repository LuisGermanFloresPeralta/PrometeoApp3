<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlador.ConectadoActivity.fragmetos.ActuacionesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <SearchView
            android:id="@+id/shViewActuacionesFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="65dp"
            android:background="@drawable/fondo_search_view"
            android:queryHint="Fecha o NombreProfesor"
            android:searchHintIcon="@drawable/ic_buscar"
            android:searchIcon="@drawable/ic_buscar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewActuacionesParticulares"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</FrameLayout>