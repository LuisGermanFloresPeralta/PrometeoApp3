<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moradoOscuro"
    tools:context=".controlador.DetallesItemEvaluacionesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVolverDetallesEvaluaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/transparente"
                android:onClick="volverAEvaluacines"
                app:icon="@drawable/ic_volver"
                app:iconSize="28dp"
                app:iconTint="@color/blancoHueso"
                tools:ignore="SpeakableTextPresentCheck,VisualLintButtonSize" />

            <TextView
                android:id="@+id/txtViewTituloEvaluacion_DetallesEvaluacionesItem"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/asignaturas"
                android:textColor="@color/blancoHueso"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAsignaturasDetallesEvaluaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_rv_actuaciones"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>